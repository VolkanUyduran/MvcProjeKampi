@model Entity.Concrete.SkillArea
@{
    ViewBag.Title = "AddSkillArea";
    Layout = "~/Views/Shared/_TalentLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Yetenek Bölümü Ekleme</title>
</head>
<body>
    @using (Html.BeginForm("AddSkillArea", "SkillArea", FormMethod.Post))
    {
        <form method="post" action="AddSkillArea">

            @Html.Label("Yetenek Bölümü Adı")
            <br />
            @Html.TextBoxFor(x => x.Area, new { @class = "forn-control" })
            <br /> <br />
            @Html.Label("Yetenek Bölümü Detayı")
            @Html.TextAreaFor(x => x.AreaDetails, new { @class = "form-control" })
            <br /> <br />
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <br />
        </form>
    }
    <!--bar-js-->
    <script src="~/AdminLTE-3.0.4/skills/js/bars.js"></script>
    <p>
    </p>
</body>
</html>