@using Entity.Concrete
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<SkillArea>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TalentLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Yetenek Bölümü</title>
</head>
<body>
        <h1>Yetenek Alanı Sayfası</h1>
        <a href="/SkillArea/AddSkillArea/" class="btn btn-info">Yeni Yetenek Alanı Ekle</a>
        <!-- main-row-one -->
        <div style="margin-right: 1em; margin-left: 1em">
            <br />
            <table class="table table-bordered" style="color: azure">
                <tr>
                    <th style="width: 1%; text-align: center"><b>#</b></th>
                    <th style="width: 10%; text-align: center"><b>Yetenek Alanı</b></th>
                    <th style="width: 15%; text-align: center"><b>Yetenek Alanı Detayı</b></th>
                    <th style="width: 1%; text-align: center"><b>Sil</b></th>
                    <th style="width: 1%; text-align: center"><b>Güncelle</b></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <th style="width: 1%; text-align: center"><b>@item.SkillAreaId</b></th>
                        <td style="width: 10%; text-align: center"><b>@item.Area</b></td>
                        <td style="width: 15%; text-align: center"><b>@item.AreaDetails</b></td>
                        <td style="width: 1%; text-align: center"><a href="/SkillArea/DeleteSkillArea/@item.SkillAreaId" class="btn btn-danger">Sil</a></td>
                        <td><a href="/SkillArea/UpdateSkillArea/@item.SkillAreaId" class="btn btn-warning">Güncelle</a></td>
                    </tr>
                }
            </table>
            <div style="color: beige">
                <ul class="alert-light" style="font-size: 20px"> @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))</ul>
            </div>
        </div>
        <script src="~/AdminLTE-3.0.4/skills/js/bars.js"></script>
</body>
</html>

